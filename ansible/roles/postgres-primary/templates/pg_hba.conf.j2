# TYPE  DATABASE        USER            ADDRESS                 METHOD

# "local" is for Unix domain socket connections only
local   all             all                                     peer

# IPv4 local connections:
host    all             all             127.0.0.1/32            md5

# IPv6 local connections:
host    all             all             ::1/128                 md5

# Allow replication connections from replica servers
host    replication     {{ postgres_repl_user }}     0.0.0.0/0               md5

# Allow application connections from anywhere (change in production as needed)
host    {{ postgres_database }}    {{ postgres_app_user }}      0.0.0.0/0               md5
host    all             {{ postgres_app_user }}      0.0.0.0/0               md5
