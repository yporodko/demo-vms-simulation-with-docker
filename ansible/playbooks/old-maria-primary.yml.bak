---
# Playbook to configure MariaDB Primary server
# Usage: ansible-playbook playbooks/maria-primary.yml

- name: Configure MariaDB Primary Server
  hosts: maria-primary
  become: yes  # Use sudo (though we're already root)

  roles:
    - common           # Install base packages, create testuser
    - mariadb-primary  # Install and configure MariaDB

  tasks:
    - name: Verify MariaDB is running
      service:
        name: mariadb
        state: started
      tags: verify

    - name: Test MySQL connection
      command: mysql -u root -e "SELECT 1;"
      changed_when: false
      tags: verify

    - name: Show master status
      command: mysql -u root -e "SHOW MASTER STATUS\G"
      register: master_status
      changed_when: false
      tags: verify

    - name: Display master status
      debug:
        var: master_status.stdout_lines
      tags: verify
